@model IEnumerable<Blazor_Test_App.Models.Category>

@{
    ViewData["Title"] = "Quản lý Category";
}

<h2>Quản lý Category</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên Category</th>
            <th>Mô tả</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>@category.Description</td>
                <td>
                    <a href="@Url.Action("EditCategory", "Category", new { id = category.CategoryID })" class="btn btn-warning">Sửa</a>
                    <a href="@Url.Action("DeleteCategory", "Category", new { id = category.CategoryID })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("CreateCategory", "Category")" class="btn btn-primary">Thêm Category mới</a>


<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Quay lại Trang Chủ</a>