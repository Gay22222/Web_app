@model Blazor_Test_App.Models.Category

<h2>Add New Category</h2>

<!-- Hiển thị thông báo lỗi nếu có -->
@if (ViewBag.Error != null)
{
    <div style="color: red;">
        <strong>@ViewBag.Error</strong>
    </div>
}

<!-- Hiển thị thông báo thành công -->
@if (TempData["SuccessMessage"] != null)
{
    <div style="color: green;">
        <strong>@TempData["SuccessMessage"]</strong>
    </div>
}

<form asp-action="CreateCategory" method="post">
    <div>
        <label for="CategoryName">Category Name</label>
        <input type="text" id="CategoryName" name="categoryName" value="@Model.CategoryName" required />
    </div>

    <div>
        <label for="Description">Description</label>
        <textarea id="Description" name="description">@Model.Description</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Add Category</button>
</form>

<a href="@Url.Action("ManageCategory", "Category")" class="btn btn-secondary">Quay lại </a>