@model IEnumerable<Blazor_Test_App.Models.Brand>

@{
    ViewData["Title"] = "Quản lý Brand";
}

<h2>Quản lý Brand</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tên Brand</th>
            <th>Mô tả</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var brand in Model)
        {
            <tr>
                <td>@brand.BrandName</td>
                <td>@brand.Description</td>
                <td>
                    <a href="@Url.Action("EditBrand", "Brand", new { id = brand.BrandID })" class="btn btn-warning">Sửa</a>
                    <a href="@Url.Action("DeleteBrand", "Brand", new { id = brand.BrandID })" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("CreateBrand", "Brand")" class="btn btn-primary">Thêm Brand mới</a>


<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Quay lại Trang Chủ</a>