@model Blazor_Test_App.Models.Brand

<h2>Chỉnh sửa Brand</h2>

<form asp-action="Edit" method="post">
    <div>
        <label for="BrandName">Tên Brand</label>
        <input type="text" id="BrandName" name="BrandName" value="@Model.BrandName" required />
    </div>

    <div>
        <label for="Description">Mô tả</label>
        <textarea id="Description" name="Description" required>@Model.Description</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>

<a href="@Url.Action("ManageBrand", "Brand")" class="btn btn-secondary">Quay lại</a>

@if (TempData["SuccessMessage"] != null)
{
    <div style="color: green;">
        <strong>@TempData["SuccessMessage"]</strong>
    </div>
}