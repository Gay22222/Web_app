@model IEnumerable<Blazor_Test_App.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td>
                <td>
                    <a href="@Url.Action("Details", "Product", new { id = product.ProductID })" class="btn btn-info">View Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>
