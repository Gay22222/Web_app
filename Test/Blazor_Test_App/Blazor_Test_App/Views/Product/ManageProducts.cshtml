<h2>Product Management</h2>


<a href="@Url.Action("CreateProduct", "Product")" class="btn btn-success">Thêm sản phẩm mới</a>
<table class="table">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Stock Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.StockQuantity</td>
                <td>
                    <a href="@Url.Action("EditProduct", "Product", new { id = product.ProductID })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("DeleteProduct", "Product", new { id = product.ProductID })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Quay lại Trang Chủ</a>


